<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="DMPApp" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- classes -->
		<class>de.avgl.dmp.persistence.model.resource.Resource</class>
		<class>de.avgl.dmp.persistence.model.resource.Configuration</class>
		<class>de.avgl.dmp.persistence.model.resource.DataModel</class>
		<class>de.avgl.dmp.persistence.model.schema.Attribute</class>
		<class>de.avgl.dmp.persistence.model.schema.AttributePath</class>
		<class>de.avgl.dmp.persistence.model.schema.Clasz</class>
		<class>de.avgl.dmp.persistence.model.schema.Schema</class>
		<class>de.avgl.dmp.persistence.model.job.Component</class>
		<class>de.avgl.dmp.persistence.model.job.Filter</class>
		<class>de.avgl.dmp.persistence.model.job.Function</class>
		<class>de.avgl.dmp.persistence.model.job.Mapping</class>
		<class>de.avgl.dmp.persistence.model.job.Project</class>
		<class>de.avgl.dmp.persistence.model.job.Transformation</class>
		<class>de.avgl.dmp.persistence.model.schema.MappingAttributePathInstance</class>

		<!-- if you want to selectively cache entities using the @Cacheable annotation -->
		<!-- <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode> -->
		<shared-cache-mode>NONE</shared-cache-mode>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<!-- <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"
				/> -->
			<!-- <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"
				/> -->
			<property name="javax.persistence.jdbc.url" value="${rdb.url}" />
			<property name="javax.persistence.jdbc.user" value="${rdb.username}" />
			<property name="javax.persistence.jdbc.password" value="${rdb.password}" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"
				/> -->
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"
				/> -->
			<property name="hibernate.connection.shutdown" value="true" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="none" /> -->

			<!-- Echo all executed SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.internal.NoCachingRegionFactory" />

			<!-- for enabling L2 caching -->
			<!-- <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"
				/> -->
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />
			<!-- <property name="net.sf.ehcache.configurationResourceName" value="META-INF/ehcache.xml"
				/> -->

			<!-- for enabling L1 caching -->
			<property name="hibernate.cache.use_query_cache" value="false" />

			<!-- connection pooling with c3p0 -->
			<property name="hibernate.connection.provider_class"
					  value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider" />

			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<!-- <property name="hibernate.c3p0.acquire_increment" value="1" /> -->
			<property name="hibernate.c3p0.idle_test_period" value="30" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.maxStatementsPerConnection" value="20" />
			<property name="hibernate.c3p0.timeout" value="10" />

			<property name="hibernate.c3p0.maxIdleTimeExcessConnections" value="45" />
			<property name="hibernate.c3p0.maxConnectionAge" value="500" />
			<property name="hibernate.c3p0.numHelperThreads" value="1" />
			<property name="hibernate.c3p0.checkoutTimeout" value="0" />
			<property name="hibernate.c3p0.testConnectionOnCheckout" value="true" />
			<!--<property name="hibernate.c3p0.testConnectionOnCheckin" value="true" />-->
			<property name="hibernate.c3p0.preferredTestQuery" value="SELECT 1" />
			<property name="hibernate.c3p0.acquireRetryAttempts" value="3" />
			<property name="hibernate.c3p0.acquireRetryDelay" value="100" />
			<property name="hibernate.c3p0.breakAfterAcquireFailure" value="false" />
			<!-- <property name="hibernate.c3p0.debugUnreturnedConnectionStackTrace" value="true" />
			<property name="hibernate.c3p0.unreturnedConnectionTimeout" value="3000" />

			<property name="hibernate.c3p0.connectionCustomizerClassName" value="com.avgl.cdc.persistence.util.VerboseConnectionCustomizer" /> -->

			<!-- Enable Hibernate's automatic session context management => thread
				!= org.hibernate.context.ThreadLocalSessionContext:current sessions are tracked
				by thread of execution -->
			<property name="hibernate.current_session_context_class" value="thread" />

			<property name="hibernate.connection.autoReconnect" value="true" />
			<property name="hibernate.connection.autoReconnectForPools" value="true" />
			<property name="hibernate.connection.is-connection-validation-required"
					  value="true" />

			<!-- <property name="hibernate.enable_lazy_load_no_trans" value="false"
				/> -->
		</properties>
	</persistence-unit>
</persistence>
