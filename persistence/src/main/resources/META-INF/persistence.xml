<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="DMPApp" transaction-type="RESOURCE_LOCAL">
		<provider> org.hibernate.ejb.HibernatePersistence</provider>

		<!-- classes -->
		<class>de.avgl.dmp.persistence.model.resource.Resource</class>
		<class>de.avgl.dmp.persistence.model.resource.Configuration</class>

		<!-- if you want to selectively cache entities using the @Cacheable annotation -->
		<!-- <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode> -->
		<shared-cache-mode>NONE</shared-cache-mode>
		<properties>
			<!-- Oracle Configuration -->
			<!-- <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"
				/> -->
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<!-- <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"
				/> -->
			<property name="javax.persistence.jdbc.url" value="${rdb.url}" />
			<property name="javax.persistence.jdbc.user" value="${rdb.username}" />
			<property name="javax.persistence.jdbc.password" value="${rdb.password}" />
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"
				/> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"
				/> -->
			<property name="hibernate.connection.shutdown" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<!-- Echo all executed SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />

			<!-- for enabling L2 caching -->
			<!-- <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"
				/> -->
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />
			<!-- <property name="net.sf.ehcache.configurationResourceName" value="META-INF/ehcache.xml"
				/> -->

			<!-- for enabling L1 caching -->
			<property name="hibernate.cache.use_query_cache" value="false" />
		</properties>
	</persistence-unit>
</persistence>
